doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description' content='')
  meta(name='author' content='')
  title=title
  // Bootstrap core CSS
  link(href='/stylesheets/bootstrap.css' rel='stylesheet')
// Navigation
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.static-top
  .container
    // a.navbar-brand(href='#') Start Bootstrap
    .input-group
      input.form-control(type='text' id='item' placeholder="Enter Item Name or UPC" aria-label="Recipient's username" aria-describedby='basic-addon2')
      .input-group-append
        button.btn.btn-outline-secondary(type='button' id='addItem') Add
    button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarResponsive.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item.active
          a.nav-link(href='' data-toggle='modal' data-target='#modalTaxRate') Tax Rate
        li.nav-item.active
          a.nav-link(href='' data-toggle='modal' data-target='#modalDiscount') Discount
// Page Content
.container
  .row
    .col-lg-12.text-center
      .ui.container
        table.ui.celled.table.center.aligned(id='myTable')
          tfoot(style='text-align:right')
            tr
              td.total(colspan='6') Total $0.00
          thead
            tr
              th Item Name
              th Quantity
              th Unit Price
              th Subtotal
              th.text-right Remove
          tbody
      #modalTaxRate.modal.fade(tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            .modal-header.text-center
              h4.modal-title.w-100.font-weight-bold Change Tax %
              button.close(type='button' data-dismiss='modal' aria-label='Close')
                span(aria-hidden='true') &times;
            .modal-body
              .md-form
                i.fas.fa-envelope.prefix.grey-text
                input(type='text')
            .modal-footer.d-flex.justify-content-center
              button.btn.btn-default Apply
      #modalDiscount.modal.fade(tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
          .modal-content
            .modal-header.text-center
              h4.modal-title.w-100.font-weight-bold Apply Discount %
              button.close(type='button' data-dismiss='modal' aria-label='Close')
                span(aria-hidden='true') &times;
            .modal-body
              .md-form
                i.fas.fa-envelope.prefix.grey-text
                input(type='text')
            .modal-footer.d-flex.justify-content-center
              button.btn.btn-default Apply
// Bootstrap core JavaScript
script(src='/javascripts/jquery.slim.js')
script(src='/javascripts/bootstrap.bundle.js')
script(src='/javascripts/script.js')